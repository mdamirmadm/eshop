<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<link rel="stylesheet" type="text/css" href="/css/star.css">

<div class="container">
    <%-include('../partials/flash')%>
    <div class="row my-5">
        <div class="col-md-6">
            <div class="card border-0 text-center">
                <img src="<%=product.img%>" class="card-img-top" alt="Product Image">
                <div class="card-body">
                  <h5 class="card-title display-4"><%=product.name%></h5>
                  <h5 class="card-title">Rs.<%=product.price%></h5>
                  <p class="card-text"><%=product.desc%>.</p>
                  <a href="#" class="btn btn-success">Buy</a>
                  <form action="/user/<%=product._id%>/cart" method="POST" class="d-inline" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-secondary">Add to cart</button>
                  </form>
                
                  <a href="/products/<%=product._id%>/edit" class="my-2 my-sm-1 my-md-0 btn btn-primary">Edit</a>
                
                  <!-- Delete Button -->
                  <form class="d-inline" action="/products/<%=product._id%>?_method=DELETE"   method=POST enctype="multipart/form-data">
                        <button type="submit" class="my-2 my-sm-1 my-md-0 btn btn-danger">Delete</button>
                  </form>
                  
                </div>
            </div>
        </div>

        <!-- Review Form -->
        <div class="offset-1 col-10 col-md-4 my-4 my-md-0">
            <form action="/products/<%=product._id%>/review" method="POST">
                <h4 class="display-4">Leave a Review</h4>
                <div class="mt-3">
                    <!-- Star Rating -->
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                </div>

                <div class="mb-3">
                    <label for="review" class="form-label">Review</label>
                    <textarea rows="3" cols="5" class="form-control" id="review" name="review"></textarea>
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
            </form>

            <div class="my-md-5 my-3">
                <%for(let review of product.reviews){%>
                    <div class="card my-3">
                        <div class="card-header"><%=review.user%></div>
                        <div class="card-body bg-light">
                            <p class="starability-result" data-rating=<%=review.rating%>>
                                Rated: 3 stars
                            </p>
                            <div class="card-text"><p><%=review.review%></p></div>
                        </div>
                    </div>
                <%}%>
            </div>
             
        </div>
    </div>
</div>
<%-include('../partials/footer')%>